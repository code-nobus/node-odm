{
    "name": "@nobus/odm",
    "description": "",
    "version": "0.0.0-development",
    "license": "MIT",
    "keywords": [],
    "repository": "https://github.com/code-nobus/node-odm.git",
    "files": [
        "dist/"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "dependencies": {
        "@sirian/annotations": "^1.0.0",
        "@sirian/args-resolver": "^2.1.4",
        "@sirian/clone": "^1.3.0",
        "@sirian/common": "^4.38.3",
        "@sirian/decorators": "^1.2.2",
        "@sirian/error": "^1.0.1",
        "@sirian/format": "^1.0.3",
        "@sirian/iterator": "^1.11.2",
        "@sirian/mixin": "^2.0.0",
        "@sirian/ts-extra-types": "^3.40.0",
        "bson": "^4.0.2",
        "mongodb": "^3.2.6"
    },
    "devDependencies": {
        "@types/bson": "^4.0.0",
        "@types/jest": "^24.0.13",
        "@types/mongodb": "^3.1.27",
        "@types/node": "^12.0.4",
        "coveralls": "^3.0.3",
        "husky": "^2.3.0",
        "jest": "^24.8.0",
        "rimraf": "^2.6.2",
        "semantic-release": "^15.13.3",
        "ts-jest": "^24.0.2",
        "tslint": "^5.17.0",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "ci:build": "yarn clean && yarn lint && yarn test && yarn build",
        "clean": "yarn build:clean; yarn test:clean",
        "build": "yarn build:clean && tsc",
        "build:clean": "rimraf dist",
        "build:watch": "yarn build --watch",
        "lint": "yarn tslint:lint",
        "lint:fix": "yarn tslint:fix",
        "tslint:lint": "tslint '{src,tests}/**/*'",
        "tslint:fix": "yarn tslint:lint --fix",
        "test": "yarn test:clean && jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "release": {
        "branch": "master",
        "analyzeCommits": {
            "releaseRules": [
                {
                    "type": "patch",
                    "release": "patch"
                },
                {
                    "type": "fix",
                    "release": "patch"
                },
                {
                    "type": "minor",
                    "release": "minor"
                },
                {
                    "type": "major",
                    "release": "major"
                }
            ]
        }
    },
    "publishConfig": {
        "tag": "latest",
        "access": "public"
    },
    "jest": {
        "roots": [
            "<rootDir>/tests"
        ],
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "/test[^/]*\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "json",
            "js"
        ]
    }
}
